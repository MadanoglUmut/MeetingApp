@model MeetingApp.Models.MeetingInfo;
@{
    Layout = "_Layout2";
    ViewBag.Title = "Toplanti Başvuru";
}
<main class="text-center">
<h1 class="h4">@ViewBag.Selamlama</h1>
<p>Toplanti Katilim Durumunu Bildiriniz</p>
<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") Tarihinde Gerçeklesecek</li>
        <li class="list-group-item">@Model.NumberOfPeople Katilimci</li>
        
        
    </ul>
</div>
<a class="btn btn-sm btn-outline-primary" asp-controller = "Meeting" asp-action="Apply" >Başvuru Yap</a>
</main>
