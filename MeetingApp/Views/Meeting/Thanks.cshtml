@model MeetingApp.Models.UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
<h1 class="h4">Başvuru Durumu</h1>

@if(@Model.WillAttend == true){
<p>Teşekkürler,@Model.Name. Toplantiya sizinle birlikte @ViewBag.UserCount katiliyor</p>
<a class="btn btn-sm btn-outline-primary" href="/Meeting/List">Katilimcilari Listele</a>
}else{
<p>@Model.Name, katilmadigindan dolayi uzgunuz</p>
<a class="btn btn-sm btn-outline-primary" href="/Meeting/Apply">Başvuru Formu</a>
}

</main>

