@model List<MeetingApp.Models.UserInfo>
@{
    ViewBag.Title = "Toplanti Listesi";
}
<h1 class="h4">Toplantiya katilim listesi</h1>
<main class="text-center">
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katilim Durumu</td>
        </tr>
    </thead>



    <tbody>

        @{
            int i = 0;
        }



        @foreach(var user in @Model){
            string? durum = null;
            var className = user.WillAttend == true ? "table-success" : "table-danger";
            if(user.WillAttend == true){
                durum = "Evet";
                i++;
            }
            else{
                durum = "Hayir";
            }
          <tr class="@className">
            <td>@user.Name</td>
            <td>@durum</td>
            <td><a btn btn-sm btn-primary href="/Meeting/Details/@user.Id">Detay</a></td>
        </tr>
        }

    </tbody>
</table>

    <div class="card">
        <div class="card-body">
            <p>Katilimci Sayisi:@i</p>
        </div>
    </div>

</main>
